{
  "name": "micromicro",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch ",
    "start:prod": "node dist/apps/micromicro/main",
    "start:all": "concurrently \"nest start api-gateway\" \"nest start micromicro\" \"nest start micromicro-consumer\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:testcontainers": "jest --testPathPattern=testcontainers",
    "test:testcontainers:setup": "bash ./apps/micromicro/scripts/testcontainers-setup.sh",
    "docker:up:micromicro": "docker compose -f ./apps/micromicro/docker-compose.yml up -d",
    "docker:down:micromicro": "docker compose -f ./apps/micromicro/docker-compose.yml down",
    "docker:up:db": "docker compose -f ./docker/micromicro-db/docker-compose.yml up -d",
    "docker:down:db": "docker compose -f ./docker/micromicro-db/docker-compose.yml down",
    "docker:up:kafka": "docker compose -f ./docker/kafka/docker-compose.yml up -d",
    "docker:down:kafka": "docker compose -f ./docker/kafka/docker-compose.yml down",
    "docker:up:all": "npm run docker:up:db && npm run docker:up:kafka && npm run docker:up:micromicro",
    "docker:down:all": "npm run docker:down:micromicro && npm run docker:down:kafka && npm run docker:down:db"
  },
  "dependencies": {
    "@schemifyjs/core": "~0.1.0",
    "@schemifyjs/types": "~0.1.0",
    "@schemifyjs/schematics": "~0.1.0",
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.7.13",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/terminus": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.201.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@prisma/client": "^6.6.0",
    "class-validator": "^0.14.1",
    "google-protobuf": "^3.21.4",
    "joi": "^17.13.3",
    "kafkajs": "^2.2.4",
    "prisma": "^6.6.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@schemifyjs/cli": "~0.1.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@darraghor/eslint-plugin-nestjs-typed": "^6.4.3",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@testcontainers/kafka": "^11.0.3",
    "@testcontainers/postgresql": "^11.0.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "protobufjs": "^7.4.0",
    "protoc-gen-ts": "^0.8.7",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "testcontainers": "^11.0.3",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-proto": "^2.7.0",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
