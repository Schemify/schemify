# ========================================
# CONFIGURACIÓN GLOBAL DEL PROYECTO
# ========================================

# Entorno de ejecución
NODE_ENV=development
LOG_LEVEL=debug

# ========================================
# CONFIGURACIÓN DEL MICROSERVICIO MICROMICRO
# ========================================

# Información del servicio
SERVICE_APP_NAME=micromicro-service
MICROMICRO_SERVICE_PORT=3000
MICROMICRO_GRPC_PORT=50051

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS MICROMICRO
# ========================================

# Variables de conexión a PostgreSQL
MICROMICRO_DATABASE_NAME=micromicro
MICROMICRO_DATABASE_USER=micromicro_user
MICROMICRO_DATABASE_PASSWORD=micromicro_password_secure
MICROMICRO_DATABASE_PORT=5432
MICROMICRO_DATABASE_HOST=postgres-micromicro

# URL de conexión completa para Prisma
MICROMICRO_DATABASE_URL=postgresql://${MICROMICRO_DATABASE_USER}:${MICROMICRO_DATABASE_PASSWORD}@${MICROMICRO_DATABASE_HOST}:5432/${MICROMICRO_DATABASE_NAME}?schema=public

# ========================================
# CONFIGURACIÓN DE KAFKA
# ========================================

# Configuración del micromicro Kafka
KAFKA_CLIENT_ID=micromicro-service
KAFKA_BROKERS=kafka1:9092
