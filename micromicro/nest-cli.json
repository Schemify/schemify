{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/micromicro/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/micromicro",
  "projects": {
    "observability": {
      "type": "library",
      "root": "libs/observability",
      "entryFile": "index",
      "sourceRoot": "libs/observability/src",
      "compilerOptions": {
        "tsConfigPath": "libs/observability/tsconfig.lib.json"
      }
    },
    "proto": {
      "type": "library",
      "root": "libs/proto",
      "sourceRoot": "libs/proto",
      "compilerOptions": {
        "tsConfigPath": "libs/proto/tsconfig.lib.json",
        "webpack": false,
        "assets": ["src/**/*.proto"],
        "watchAssets": true
      }
    },
    "micromicro": {
      "type": "application",
      "root": "apps/micromicro",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/micromicro/tsconfig.app.json",
        "assets": ["libs/proto/src/*.proto"],
        "watchAssets": true
      }
    }
  }
}
