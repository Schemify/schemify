# ========================================
# CONFIGURACIÓN GLOBAL DEL PROYECTO
# ========================================

# Entorno de ejecución
NODE_ENV=development
LOG_LEVEL=debug

# ========================================
# CONFIGURACIÓN DEL MICROSERVICIO MICROSERVICE_NAME
# ========================================

# Información del servicio
SERVICE_APP_NAME=microserviceName-service
MICROSERVICE_NAME_SERVICE_PORT=3000
MICROSERVICE_NAME_GRPC_PORT=50051

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS MICROSERVICE_NAME
# ========================================

# Variables de conexión a PostgreSQL
MICROSERVICE_NAME_DATABASE_NAME=microserviceName
MICROSERVICE_NAME_DATABASE_USER=__project_name_kebab___user
MICROSERVICE_NAME_DATABASE_PASSWORD=__project_name_kebab___password_secure
MICROSERVICE_NAME_DATABASE_PORT=5432
MICROSERVICE_NAME_DATABASE_HOST=postgres-microserviceName

# URL de conexión completa para Prisma
MICROSERVICE_NAME_DATABASE_URL=postgresql://${MICROSERVICE_NAME_DATABASE_USER}:${MICROSERVICE_NAME_DATABASE_PASSWORD}@${MICROSERVICE_NAME_DATABASE_HOST}:5432/${MICROSERVICE_NAME_DATABASE_NAME}?schema=public

# ========================================
# CONFIGURACIÓN DE KAFKA
# ========================================

# Configuración del microserviceName Kafka
KAFKA_CLIENT_ID=microserviceName-service
KAFKA_BROKERS=kafka1:9092
