{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/microservice-name/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/microservice-name",
  "projects": {
    "proto": {
      "type": "library",
      "root": "libs/proto",
      "sourceRoot": "libs/proto",
      "compilerOptions": {
        "tsConfigPath": "libs/proto/tsconfig.lib.json",
        "webpack": false,
        "assets": ["src/**/*.proto"],
        "watchAssets": true
      }
    },
    "microservice-name": {
      "type": "application",
      "root": "apps/microservice-name",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/microservice-name/tsconfig.app.json",
        "assets": ["libs/proto/src/*.proto"],
        "watchAssets": true
      }
    }
  }
}
