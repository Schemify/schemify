# ========================================
# CONFIGURACIÓN GLOBAL DEL PROYECTO
# ========================================

# Entorno de ejecución
NODE_ENV=development
LOG_LEVEL=debug

# ========================================
# CONFIGURACIÓN DEL MICROSERVICIO CLIENTES
# ========================================

# Información del servicio
SERVICE_APP_NAME=clientes-service
CLIENTES_SERVICE_PORT=3000
CLIENTES_GRPC_PORT=50051

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS CLIENTES
# ========================================

# Variables de conexión a PostgreSQL
CLIENTES_DATABASE_NAME=schemify_clientes
CLIENTES_DATABASE_USER=schemify_clientes_user
CLIENTES_DATABASE_PASSWORD=schemify_clientes_password_secure
CLIENTES_DATABASE_PORT=5432
CLIENTES_DATABASE_HOST=postgres-clientes

# URL de conexión completa para Prisma
CLIENTES_DATABASE_URL=postgresql://${CLIENTES_DATABASE_USER}:${CLIENTES_DATABASE_PASSWORD}@${CLIENTES_DATABASE_HOST}:5432/${CLIENTES_DATABASE_NAME}?schema=public

# ========================================
# CONFIGURACIÓN DE KAFKA
# ========================================

# Configuración del cliente Kafka
KAFKA_CLIENT_ID=clientes-service
KAFKA_BROKERS=kafka1:9092
